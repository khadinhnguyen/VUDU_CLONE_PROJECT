<section>
    <div class="container">
            <div class="hero-background hero-wrapper d-flex product-hero-background" style="background-image: url('/img/{{product.backgroundImage}}');">
                <div class="product-background-modify">
                    <div class="product-wrapper d-flex justify-content-start">
                        <div class="product-icon">
                            <img src="/img/{{product.posterImage}}" alt={{product.title}}>
                        </div>
                        <div class="product-info d-flex flex-column">
                            <div class="movie-title">{{product.title}}</div>
                            <div class="left-align">{{product.category}} | {{product.year}}</div>
                            {{!-- <div class="left-align">{{product.rating}}</div> --}}
                            <div class="movie-description">{{product.description}}</div>
                    
                            <div class="d-flex ">
                                <button class="movie-button" type="button">Rent ${{product.rent}}</button>
                                <button class="movie-button" type="button">Buy ${{product.buy}}</button>
                            </div>
                        

                        </div>
                    </div>
                
                </div>
    
            </div>
    </div>
</section>