<section>
    <div class="container">
            <div class="hero-background hero-wrapper d-flex product-hero-background" style="background-image: url('/img/movie/{{largePosterImg}}');">
                <div class="product-background-modify">
                    <div class="product-wrapper d-flex justify-content-start">
                        <div class="product-icon">
                            <img src="/img/movie/{{smallPosterImg}}" alt={{title}}>
                        </div>
                        <div class="product-info d-flex flex-column">
                            <div class="movie-title">{{title}}</div>
                            <div class="left-align">{{category}} | {{genre}} | Rating: {{rating}} | ({{numberOfStar}})</div>
                            {{!-- <div class="left-align">{{product.rating}}</div> --}}
                            <div class="movie-description">{{synopsis}}</div>
                    
                            <div class="d-flex justify-content-center ">
                                <button class="movie-button" type="button">Rent ${{rentalPrice}}</button>
                                <button class="movie-button" type="button">Buy ${{purchasePrice}}</button>
                            </div>
                            <br>
                            {{#if admin}}
                                <a href="/admin/updateMovieTv/{{_id}}">
                                <button type="button" class="btn btn-secondary btn-md btn-block btn-danger">Edit (Admin Only)</button> 
                                </a>                         
                            {{/if}}
                            <br>
                            
                        

                        </div>
                    </div>                
                </div>    
            </div>
    </div>
</section>