<section>
    <div class="form-container">
        <div></div>
        <div class="form-top">
            {{#if movieCreate}}
                <div class="form-header"><p class="text-center font-24 fw-bolder">Create Movie or TV</p></div>
            {{else}}
                <div class="form-header"><p class="text-center font-24 fw-bolder">Update Movie or TV</p></div>
            {{/if}}
            <div class="form-body">
                
                    <form 
                    {{#if movieCreate}} 
                    action="/admin/addMovieTv" 
                    {{else}}
                    action="/admin/updateMovieTv/{{movie.id}}?method=PUT"
                    {{/if}}
                    enctype="multipart/form-data" method="POST">

                    <div class="mb-3">                        
                            {{!-- <div class="col"> --}}
                                <label>Title</label>
                                <input type="text" class="form-control" value='{{movie.title}}' id="title" name="title">
                                <div class="error-message">{{errors.titleError}}</div>
                                <br>
                            {{!-- </div> --}}
                            {{!-- <div class="col"> --}}
                                <label>Synopsis</label>
                                <textarea type="text" class="form-control" id="synopsis" name="synopsis">{{movie.synopsis}}</textarea>
                                <div class="error-message">{{errors.synopsisError}}</div>
                            {{!-- </div> --}}
                            <br>
                            <div class="row">
                                <div class="col">
                                    <label for="">Rental Price Per Day</label>
                                    <input type="number" step="0.01" class="form-control" value={{movie.rentalPrice}} placeholder="$" id="rentalPrice" name="rentalPrice">
                                    <div class="error-message">{{errors.rentalPriceError}}</div>
                                </div>
                                <div class="col">
                                    <label>Purchase Price</label>
                                    <input type="number" step="0.01" class="form-control" value={{movie.purchasePrice}} placeholder="$" id="purchasePrice" name="purchasePrice">
                                    <div class="error-message">{{errors.purchasePriceError}}</div>
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <label>Category</label>
                                <select name="category">
                                    <option {{#if_eq movie.category "movie"}}selected{{/if_eq}}value="movie">movie</option>
                                    <option {{#if_eq movie.category "tv"}}selected{{/if_eq}} value="tv">TV</option>
                                </select>
                            </div>
                            <br>
                           <div class="col">
                                <label>Genre</label>
                                <select name="genre">
                                    <option {{#if_eq movie.genre "action"}}selected{{/if_eq}} value="action">Action</option>
                                    <option {{#if_eq movie.genre "scri-fi"}}selected{{/if_eq}} value="scri-fi">Scri-Fi</option>
                                    <option {{#if_eq movie.genre "family"}}selected{{/if_eq}} value="family">Family  </option>
                                    <option {{#if_eq movie.genre "kid"}}selected{{/if_eq}} value="kid">Kid  </option>
                                    <option {{#if_eq movie.genre "kid"}}selected{{/if_eq}} value="comedy">Comedy  </option>
                                </select>
                            </div>
                            <br>                         
                            <div class="col">
                                <label>Featured</label>
                                <select name="feature">
                                    <option {{#if_eq movie.feature "none"}}selected{{/if_eq}} value="none">No Feature</option>
                                    <option {{#if_eq movie.feature "banner"}}selected{{/if_eq}} value="banner">Banner Show</option>
                                    <option {{#if_eq movie.feature "rental"}}selected{{/if_eq}} value="rental">Rental</option>
                                    <option {{#if_eq movie.feature "week-deal"}}selected{{/if_eq}} value="week-deal">Deal Of The Week</option>
                                    <option {{#if_eq movie.feature "new-release"}}selected{{/if_eq}} value="new-release">New Release</option>
                                    <option {{#if_eq movie.feature "tv-season"}}selected{{/if_eq}} value="tv-season">TV Season</option>
                                </select>
                            </div>
                            <br>
                            <div class="col">
                                <label>Rating</label>
                                <select name="rating">
                                    <option {{#if_eqNum movie.rating 1}}selected{{/if_eqNum}} value=1>1</option>
                                    <option {{#if_eqNum movie.rating 2}}selected{{/if_eqNum}} value=2>2</option>
                                    <option {{#if_eqNum movie.rating 3}}selected{{/if_eqNum}} value=3>3</option>
                                    <option {{#if_eqNum movie.rating 4}}selected{{/if_eqNum}} value=4>4</option>
                                    <option {{#if_eqNum movie.rating 5}}selected{{/if_eqNum}} value=5>5</option>
                                </select>
                            </div>
                            <div class="col">
                                <label>Number of stars</label>
                                <input type="number" class="form-control" value={{movie.numberOfStar}} id="numberOfStar" name="numberOfStar">
                                <div class="error-message">{{errors.numberOfStar}}</div>
                            </div>
                            <br>
                            <div class="col">
                                <label>Small Poster Image</label>
                                <input type="file" name="smallPosterImg" id="smallPosterImg">
                                <div class="error-message">{{errors.smallPosterImgError}}</div>
                            </div>
                            <br>
                            
                            <div class="col"> 
                            
                                <label>Large Poster Image</label>
                                <input type="file" name="largePosterImg" id="largePosterImg">
                                <div class="error-message">{{errors.largePosterImgError}}</div>
                            </div>


                    </div>
                    <div class="mb-3">
                        {{#if movieCreate}}
                            <button type="submit" class="form-button">Create</button>
                        {{else}}
                            <button type="submit" class="form-button">Update</button>
                        {{/if}}
                    </div>
                </form>
            </div>
        </div>
        <div></div>
</section>