<section>
    <div class="form-container">
        <div></div>
        <div class="form-top">
            <div class="form-header"><p class="text-center font-24 fw-bolder">Add a New Movie/TV to Database </p></div>
            <div class="form-body">
                <form  action="/admin/addMovieTv" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">

                        
                            {{!-- <div class="col"> --}}
                                <label>Title</label>
                                <input type="text" class="form-control" value='' id="title" name="title">
                                <br>
                            {{!-- </div> --}}
                            {{!-- <div class="col"> --}}
                                <label>Synopsis</label>
                                <textarea type="text" class="form-control" value='' id="synopsis" name="synopsis"></textarea>
                            {{!-- </div> --}}
                            <br>
                            <div class="row">
                                <div class="col">
                                    <label for="">Rent Price Per Day</label>
                                    <input type="number" step="0.01" class="form-control" value="" placeholder="$" id="rentalPrice" name="rentalPrice">
                                </div>
                                <div class="col">
                                    <label>Purchase Price</label>
                                    <input type="number" step="0.01" class="form-control" value='' placeholder="$" id="purchasePrice" name="purchasePrice">
                                </div>
                            </div>
                            <br>
                            <div class="col">
                                <label>Category</label>
                                <select name="category">
                                    <option value="movie">Movie</option>
                                    <option value="tv">TV</option>
                                </select>
                            </div>
                            <br>
                            <div class="col">
                                <label>Genre</label>
                                <select name="genre">
                                    <option value="action">Action</option>
                                    <option value="scri-fi">Scri-Fi</option>
                                    <option value="family">Family</option>
                                    <option value="kid">Kid</option>
                                </select>
                            </div>
                            <br>
                            <div class="col">
                                <label>Rating</label>
                                <select name="rating">
                                    <option value=1>1</option>
                                    <option value=2>2</option>
                                    <option value=3>3</option>
                                    <option value=4>4</option>
                                    <option value=5>5</option>
                                </select>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col">
                                    <label>Home Page Feature</label>
                                </div>                                
                                <div class="col">
                                    <input type="radio" id="yes" name="feature" value=true>
                                    <label for="yes">Yes</label>
                                </div>
                                <div class="col">
                                    <input type="radio" id="no" name="feature" value=false checked>
                                    <label for="no">No</label>
                                </div>

                            </div>
                            <br>
                            <div class="col">
                                <label>Small Poster Image</label>
                                <input type="file" name="smallPosterImg" id="smallPosterImg">
                            </div>
                            <br>
                            
                            <div class="col">
                            
                                <label>Large Poster Image</label>
                                <input type="file" name="largePosterImg" id="largePosterImg">
                            </div>


                    </div>
                    <div class="mb-3">
                        <button type="submit" class="form-button">Add</button>
                    </div>
                </form>
            </div>
        </div>
        <div></div>
</section>